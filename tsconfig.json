{
  "compilerOptions": {
    "target": "esnext",                   // Aggiorna il target a "esnext" per supportare le caratteristiche moderne
    "moduleResolution": "node16",          // Cambia a "node16" per una risoluzione dei moduli compatibile con ESLint
    "module": "node16",                    // Usa "esnext" per i moduli ECMAScript moderni
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"                     // Supporta JSX per React 17+
  },
  "include": [
    "src"
, "src/components/.tsx"  ]
}
